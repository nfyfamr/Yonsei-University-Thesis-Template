    \thispagestyle{empty} 
    \noindent
    \begin{center}
        \fontsize{22pt}{22pt} \selectfont
        
        \@authorNameKr의 석사 학위논문을 인준함 \\
        
        \vskip 2cm
        
        \fontsize{16pt}{16pt} \selectfont
        \begin{flushright}
        심사위원 \underline{\hspace*{6cm}인} \\
        \vskip 0.5cm
        심사위원 \underline{\hspace*{6cm}인} \\
        \vskip 0.5cm
        심사위원 \underline{\hspace*{6cm}인} \\
        \end{flushright}

        \vfill
        
        \fontsize{22pt}{22pt} \selectfont
        \@affilUnivNameKr~\@affilSchoolNameKr \\
        
        \vskip 1cm
        
        \fontsize{16pt}{16pt} \selectfont
        \@approvalDate \\
        
        \vskip 1.5cm
        
    \end{center}
