}

%% 국문요약
\newcommand{\makeAbstractKr}{
    \phantomsection 
    \addcontentsline{toc}{section}{\@abstractNameKr}
    \subtitlesizebf{\@abstractNameKr}
    \vskip 5mm
    \begin{center}
    \subtitlesizebf{\@titleKr}
    \end{center}
    \vskip 5mm
    \@abstractKr
    \vfill
    \noindent\rule{\textwidth}{0.5pt}
    \noindent \@keywordsNameKr ~:~ \@keywordsKr
}

%% 영문요약
\newcommand{\makeAbstractEng}{
    \phantomsection 
    \addcontentsline{toc}{section}{\@abstractNameEng}
    \subtitlesizebf{\@abstractNameEng}
    \vskip 5mm
    \begin{center}
    \subtitlesizebf{\@titleEng}
    \end{center}
    \vskip 5mm
    \begin{flushright}
    \@authorNameEng \\
    \@affilDeptNameEng \\
    \@affilSchoolNameEng \\
    \@affilUnivNameEng \\
    \end{flushright}
    \vskip 5mm
    \@abstractEng
    \vfill
    \noindent\rule{\textwidth}{0.5pt}
    \noindent \@keywordsNameEng ~:~ \@keywordsEng
}

%% 감사의 글
\newcommand{\makeAcknowledgement}{
    \thispagestyle{empty} 
    \setcounter{page}{-1}
    \begin{center}
    \subtitlesizebf{\@acknowledgementName}
    \end{center}
    \vskip 5mm
    \@acknowledgement
    \vskip 5mm
    \begin{flushright}
    \@acknowledgementDate \\
    \@authorNameKr~\@acknowledgementComplimentaryName \\
    \end{flushright}
    \vfill
}






