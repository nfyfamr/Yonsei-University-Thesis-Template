%% 표제면
\newcommand{\makecover}{
    \begingroup
    \thispagestyle{empty} 
    \noindent
    \begin{center}
        \fontsize{22pt}{22pt} \selectfont
        
        \@titleKr \\
        
        \vfill
        
        \@affilUnivNameKr~\@affilSchoolNameKr \\
        \@affilDeptNameKr \\
        \@authorNameKr \\
        
        \vskip 1.5cm
        
    \end{center}
    \endgroup
}

%% 제출서
\newcommand{\makeTitle}{
    \begingroup
    \thispagestyle{empty} 
    \noindent
    \begin{center}
        \fontsize{22pt}{22pt} \selectfont
        
        \@titleKr \\
        
        \vfill
        
        \fontsize{16pt}{16pt} \selectfont
        \@advisorName~\@advisorFirst·\@advisorSecond \\

        \vfill
        
        \@submissionPhrase \\
        
        \vfill
        
        \@submitDate \\
        
        \vfill
        
        \@affilUnivNameKr~\@affilSchoolNameKr \\
        \@affilDeptNameKr \\
        \@authorNameKr \\
        
        \vskip 1.5cm
        
    \end{center}
    \endgroup
}

%% 인준서
\newcommand{\makeApproval}{
